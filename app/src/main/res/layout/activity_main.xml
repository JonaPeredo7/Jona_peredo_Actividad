<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ED7902"
    android:backgroundTint="#ED7902"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="535dp"
        android:layout_height="wrap_content"
        android:background="#F4F0F0"
        android:gravity="center"
        android:text="@string/bienvenidos"
        android:textColor="#090909"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#EDE8E8"
        android:gravity="center"
        android:text="@string/ingrese_su_email"
        android:textColor="#040303"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/edtLoginEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F1EBEB"
        android:ems="10"
        android:hint="E-mail"
        android:inputType="text"
        android:textColor="#070707" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#FAF6F6"
        android:gravity="center"
        android:text="@string/ingrese_su_contrase_a"
        android:textColor="#0B0A0A"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/edtLoginPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F4EEEE"
        android:ems="10"
        android:hint="@string/contrase_a"
        android:inputType="textPassword"
        android:textColor="#040303" />

    <Button
        android:id="@+id/btnLoginIngreso"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:background="#EC1C24"
        android:text="@string/ingresar" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="601dp"
        android:backgroundTint="#ED7902"
        app:srcCompat="@drawable/burger" />

</LinearLayout>